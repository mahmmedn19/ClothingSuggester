<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClothingSuggester" parent="Theme.MaterialComponents.Light.NoActionBar">

    </style>
    <style name="TabLayoutStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="tabIndicatorColor">@null</item>
        <item name="tabTextColor">@color/black_38</item>
        <item name="tabMode">fixed</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>
    <style name="TabTextAppearance" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
</resources>