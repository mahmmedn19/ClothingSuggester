<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClothingSuggester" parent="Theme.MaterialComponents.Light.NoActionBar">

    </style>
    <style name="TabLayoutStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="tabIndicatorColor">@null</item>
        <item name="tabTextColor">@color/black_38</item>
        <item name="tabMode">fixed</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorFullWidth">false</item>
    </style>
    <style name="TabTextAppearance" parent="Base.Widget.Design.TabLayout">
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>
    <style name="TextViewStyleWelcome" >
        <item name="android:textSize">@dimen/text_giant24</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
    </style>
    <style name="TextViewStyleWeatherCountry" >
        <item name="android:textSize">@dimen/text_giant</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black_78</item>
        <item name="android:layout_marginStart">@dimen/spacing_medium</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
    </style>
    <style name="TextViewStyleWeatherCity" >
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black_60</item>
        <item name="android:layout_marginStart">@dimen/spacing_tiny</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
    </style>
    <style name="ProgressStyle" >
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:indeterminateTint">@color/primary_300</item>
        <item name="android:indeterminateTintMode">src_in</item>
    </style>
    <style name="TextViewStyleWeather" >
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/black_87</item>
    </style>
    <style name="TextViewStyleWeatherDegree" >
        <item name="android:textSize">@dimen/text_giant36</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black_87</item>
    </style>
    <style name="TextViewStyleWeatherStatus" >
        <item name="android:textSize">@dimen/text_giant24</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:textColor">@color/black_38</item>
    </style>
</resources>